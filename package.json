{
  "name": "my-file-hub-app",
  "version": "1.0.0",
  "description": "My PC File Hub App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder"
  },
  "author": "Pentiumcity",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "ip": "^2.0.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.Sajith.myfilehub",
    "productName": "My PC File Hub",
    "files": [
      "main.js",
      "preload.js",
      "file-server/server.js",
      "client-ui/dist/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}